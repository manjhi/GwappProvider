<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/colorPrimary">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:layout_gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/navi_Image"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/ic_avatar"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/dp_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/dp_4"
                    android:src="@drawable/ic_plus" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/navi_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"
                android:drawableStart="@drawable/ic_home"
                android:drawablePadding="@dimen/dp_8"
                android:padding="@dimen/dp_4"
                android:text="Home"
                android:textColor="@drawable/selector_button"
                android:textSize="@dimen/dp_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/navi_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"
                android:drawableStart="@drawable/ic_man_user"
                android:drawablePadding="@dimen/dp_8"
                android:padding="@dimen/dp_4"
                android:text="Profile"
                android:textColor="@drawable/selector_button"
                android:textSize="@dimen/dp_18" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/navi_done_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"
                android:drawablePadding="@dimen/dp_8"
                android:padding="@dimen/dp_4"
                android:drawableStart="@drawable/ic_check"
                android:text="Done Work"
                android:textColor="@drawable/selector_button"
                android:textSize="@dimen/dp_18" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/navi_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"
                android:drawableStart="@drawable/ic_chat"
                android:drawablePadding="@dimen/dp_8"
                android:padding="@dimen/dp_4"
                android:text="Chat"
                android:textColor="@drawable/selector_button"
                android:textSize="@dimen/dp_18" />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/navi_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"
                android:drawableStart="@drawable/ic_wallet_filled_money_tool"
                android:drawablePadding="@dimen/dp_8"
                android:padding="@dimen/dp_4"
                android:text="My Wallet"
                android:textColor="@drawable/selector_button"
                android:textSize="@dimen/dp_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/navi_seeBid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"
                android:drawableStart="@drawable/ic_bid"
                android:drawablePadding="@dimen/dp_8"
                android:padding="@dimen/dp_4"
                android:text="User Posts"
                android:textColor="@drawable/selector_button"
                android:textSize="@dimen/dp_18" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/navi_earning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"
                android:drawablePadding="@dimen/dp_8"
                android:padding="@dimen/dp_4"
                android:drawableStart="@drawable/ic_dollar_coin_money"
                android:text="Earning"
                android:textColor="@drawable/selector_button"
                android:textSize="@dimen/dp_18" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/navi_work_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"
                android:drawablePadding="@dimen/dp_8"
                android:padding="@dimen/dp_4"
                android:drawableStart="@drawable/ic_clipboard_with_pencil_"
                android:text="Work List"
                android:textColor="@drawable/selector_button"
                android:textSize="@dimen/dp_18" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/navi_Support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"
                android:drawablePadding="@dimen/dp_8"
                android:padding="@dimen/dp_4"
                android:drawableStart="@drawable/ic_support"
                android:text="Support"
                android:textColor="@drawable/selector_button"
                android:textSize="@dimen/dp_18" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"
                android:drawableStart="@drawable/ic_logout"
                android:drawablePadding="@dimen/dp_8"
                android:padding="@dimen/dp_4"
                android:text="Logout"
                android:textColor="@drawable/selector_button"
                android:textSize="@dimen/dp_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="#d3d3d3" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.NavigationView>