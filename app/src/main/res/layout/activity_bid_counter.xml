<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".activities.BidCounterActivity">

    <include
        android:id="@+id/bar"
        layout="@layout/custom_appbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_20"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Date"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16" />

        <EditText
            android:id="@+id/pickDate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bid_et_bg"
            android:drawableEnd="@drawable/ic_calendar"
            android:hint="30/01/2019"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Change Service Time"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16" />

        <EditText
            android:id="@+id/serviceTime"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bid_et_bg"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:hint="12:00 PM"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Negotiate price"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16" />

        <EditText
            android:id="@+id/negotiate_price"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bid_et_bg"
            android:hint="170"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10" />


        <Button
            android:id="@+id/Negotiate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/button_bg"
            android:paddingStart="@dimen/dp_60"
            android:paddingEnd="@dimen/dp_60"
            android:text="Negotiate"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>